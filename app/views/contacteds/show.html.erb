<div>
  <div>
    <h1>
      Contacted #<%= @the_contacted.id %> details
    </h1>

    <div>
      <div>
        <a href="/contacteds">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_contacted/<%= @the_contacted.id %>">
          Delete contacted
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_contacted.user_id %>
      </dd>

      <dt>
        Other user
      </dt>
      <dd>
        <%= @the_contacted.other_user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contacted.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contacted.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit contacted
    </h2>

    <form action="/modify_contacted/<%= @the_contacted.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_contacted.user_id %>">
      </div>

      <div>
        <label for="other_user_id_box">
          Other user
        </label>

        <input type="text" id="other_user_id_box" name="query_other_user_id" value="<%= @the_contacted.other_user_id %>">
      </div>

      <button>
        Update contacted
      </button>
    </form>
  </div>
</div>

<hr>
