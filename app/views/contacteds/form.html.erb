<!-- Form to add contacted and to email -->
<div>
<h1>Contact <%=User.where({:id => @other_user_id})[0].full_name%></h1>
</div>

<form action="/insert_contacted" method="post">
<input type="hidden" name="query_other_user_id" value="<%=@other_user_id%>">
<div class="mb-3 row g-3 align-items-center">
  <div class="col-auto">
    <label for="full_name_box" style="font-weight: bold;">Subject</label>
  </div>
  <div class="col-auto" style="width: 50%">
    <input type="text" class="form-control" id="full_name_box" name="query_subject">
  </div>
</div>

<div class="mb-3">
    <label for="description_box" style="font-weight: bold;">Email Body</label>
    <textarea id="description_box" name="query_email" class="form-control" rows=3></textarea>
</div>

  <button class="btn btn-primary">
    Email!
  </button>
  </form>
