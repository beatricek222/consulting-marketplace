<div>
  <div>
    <h1>
      List of all contacteds
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new contacted
    </h2>

    <form action="/insert_contacted" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="other_user_id_box">
          Other user
        </label>

        <input type="text" id="other_user_id_box" name="query_other_user_id">
      </div>

      <button>
        Create contacted
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Other user
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_contacteds.each do |a_contacted| %>
      <tr>
        <td>
          <%= a_contacted.id %>
        </td>

        <td>
          <%= a_contacted.user_id %>
        </td>

        <td>
          <%= a_contacted.other_user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_contacted.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_contacted.updated_at) %> ago
        </td>

        <td>
          <a href="/contacteds/<%= a_contacted.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
