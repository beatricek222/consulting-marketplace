


<div>
  <div>
    <h1>
      <h1><%= @the_user.full_name%></h1>
    </h1>

    <div>
      <div>
        <a href="/marketplace">
          Go back
        </a>
      </div>
    </div>

    <%if @current_user != nil%>
    <% current_user_favorites = Favorite.where({:other_user_id => @the_user.id, :user_id => session[:user_id]}) %>

    <%the_favorite = current_user_favorites[0]%>

    <%if the_favorite == nil %>
    <form action="/insert_favorite" method="post">
    <input type="hidden" name="query_user_id" value="<%=@the_user.id%>">
    <button>Favorite!</button>
    </form>
    <%else%>
      <a href="/delete_favorite/<%=the_favorite.id%>">Un-favorite</a>
    <%end%>
    <%end%>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_user.description %>
      </dd>

      <dt>
        Areas of Expertise
      </dt>
      <dd>
        <%= @the_user.interests.each do |interest| %>
        <ul>
          <li> interest </li>
        </ul>
      </dd>


      <dt>
        Description
      </dt>
      <dd>
        <%= @the_movie.description %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit movie
    </h2>

    <form action="/modify_movie/<%= @the_movie.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_movie.title %>">
      </div>

      <div>
        <label for="year_box">
          Year
        </label>

        <input type="text" id="year_box" name="query_year" value="<%= @the_movie.year %>">
      </div>

      <div>
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="query_duration" value="<%= @the_movie.duration %>">
      </div>

      <div>
        <label for="director_id_box">
          Director
        </label>

        <input type="text" id="director_id_box" name="query_director_id" value="<%= @the_movie.director_id %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description"><%= @the_movie.description %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_movie.image %>">
      </div>

      <button>
        Update movie
      </button>
    </form>
  </div>
</div>

<hr>
