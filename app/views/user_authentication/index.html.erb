
<h1>
  List of all users
</h1>

<div>
  <div>
    <table class="table table-hover" style="border-radius: 30px">
    <thead>
      <tr class="table-info">
        <th>
          Name
        </th>

        <th>
          Role
        </th>

        <th>
          Description
        </th>

        <th>
          Details
        </th>
      </tr>
      </thead>
      <tbody>
      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.full_name %>
        </td>

        <td>
          <%= a_user.role.title %>
        </td>

        <td>
          <%= a_user.description %>
        </td>
        <td>
          <a href="/marketplace/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
