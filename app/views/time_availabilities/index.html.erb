<div>
  <div>
    <h1>
      List of all time availabilities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new time availability
    </h2>

    <form action="/insert_time_availability" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create time availability
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_time_availabilities.each do |a_time_availability| %>
      <tr>
        <td>
          <%= a_time_availability.id %>
        </td>

        <td>
          <%= a_time_availability.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_time_availability.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_time_availability.updated_at) %> ago
        </td>

        <td>
          <a href="/time_availabilities/<%= a_time_availability.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
